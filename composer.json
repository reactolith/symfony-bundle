{
    "name": "reactolith/symfony-bundle",
    "description": "Symfony integration for Reactolith â€“ Twig form theme, attribute helper, and HTTP/2 component preloading.",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "react",
        "shadcn",
        "reactolith",
        "form-theme",
        "vite",
        "server-side-rendering"
    ],
    "require": {
        "php": ">=8.2",
        "symfony/event-dispatcher": "^6.4 || ^7.0",
        "symfony/form": "^6.4 || ^7.0",
        "symfony/framework-bundle": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/twig-bundle": "^6.4 || ^7.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "symfony/phpunit-bridge": "^6.4 || ^7.0",
        "symfony/translation": "^6.4 || ^7.0 || ^8.0"
    },
    "suggest": {
        "pentatrion/vite-bundle": "Recommended for Vite asset integration (vite_entry_script_tags / vite_entry_link_tags)"
    },
    "autoload": {
        "psr-4": {
            "Reactolith\\SymfonyBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reactolith\\SymfonyBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
